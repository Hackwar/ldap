{
    "name": "joomla/ldap",
    "type": "joomla-package",
    "description": "Joomla LDAP Package",
    "keywords": ["joomla", "framework", "ldap"],
    "homepage": "https://github.com/joomla-framework/ldap",
    "license": "GPL-2.0+",
    "require": {
        "php": "^5.3.10|~7.0",
        "ext-ldap": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8|~5.0",
        "squizlabs/php_codesniffer": "1.*"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\Ldap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Joomla\\Ldap\\Tests\\": "Tests/"
        }
    },
    "extra": {
        "branch-alias": {
	        "dev-2.0-dev": "2.0-dev"
        }
    }
}
